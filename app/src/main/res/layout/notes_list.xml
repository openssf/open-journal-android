<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageButton
        android:id="@+id/notes_list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:background="@android:color/transparent"
        android:paddingEnd="4dp"
        android:src="@drawable/ic_delete_black_24dp"
        tools:text="Detail"/>

    <RelativeLayout
        android:id="@+id/recipe_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/notes_list_delete_button"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/notes_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/notes_list_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notes_list_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            tools:text="Subtitle" />

    </RelativeLayout>
</RelativeLayout>
